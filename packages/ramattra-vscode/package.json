{
	"name": "@ramattra/ramattra-vscode",
	"displayName": "Ramattra",
	"author": "David Cruz",
	"publisher": "dvvcz",
	"description": "VSCode LSP Client for Ramattra",
	"version": "0.1.0",
	"repository": "https://github.com/DvvCz/Ramattra",
	"main": "dist/extension.js",
	"engines": {
		"vscode": "^1.75.0"
	},
	"contributes": {
		"languages": [
			{
				"id": "ramattra",
				"aliases": [
					"Ramattra",
					"ramattra"
				],
				"extensions": [
					".ram",
					".ramattra"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ramattra",
				"scopeName": "source.ram",
				"path": "./syntaxes/ramattra.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"test": "vitest"
	},
	"dependencies": {
		"vscode-languageclient": "^8.1.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.81.0"
	}
}